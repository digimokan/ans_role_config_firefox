""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" KEYBINDINGS
" see documentation: enter 'help' in tridactyl cmd line
""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""

" Modes
jsb tri.config.set("nmaps", ";", "fillcmdline_notrail")

" Navigation
jsb tri.config.set("nmaps", "j", "scrollline 10")
jsb tri.config.set("nmaps", "k", "scrollline -10")
jsb tri.config.set("nmaps", ",", "tabprev")
jsb tri.config.set("nmaps", ".", "tabnext")
jsb tri.config.set("nmaps", "h", "back")
jsb tri.config.set("nmaps", "l", "forward")
jsb tri.config.set("nmaps", "[", "followpage prev")
jsb tri.config.set("nmaps", "]", "followpage next")
jsb tri.config.set("nmaps", "r", "reload")
jsb tri.config.set("nmaps", "R", "reloadall")
jsb tri.config.set("nmaps", "o", "fillcmdline open")
jsb tri.config.set("nmaps", "t", "fillcmdline tabopen")
jsb tri.config.set("nmaps", "gu", "urlparent")
jsb tri.config.set("nmaps", "gr", "urlroot")

" Find
jsb tri.config.set("nmaps", "/", "fillcmdline find")
jsb tri.config.set("nmaps", "n", "findnext 1")
jsb tri.config.set("nmaps", "N", "findnext -1")
jsb tri.config.set("nmaps", "<Space>n", "nohlsearch")

" Tabs
jsb tri.config.set("nmaps", "x", "composite tabclose | tab #")
jsb tri.config.set("nmaps", "yt", "tabduplicate")
jsb tri.config.set("nmaps", "<", "tabmove -1")
jsb tri.config.set("nmaps", ">", "tabmove +1")
jsb tri.config.set("nmaps", "X", "undo")

" Links
jsb tri.config.set("nmaps", "f", "hint")
jsb tri.config.set("nmaps", "F", "hint -t")

" Copy And Paste
jsb tri.config.set("nmaps", "yy", "clipboard yank")

" View
jsb tri.config.set("nmaps", "<C-y>", "fullscreen")
jsb tri.config.set("nmaps", "<ArrowUp>", "zoom +10 true")
jsb tri.config.set("nmaps", "<ArrowDown>", "zoom -10 true")

""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""
" SETTINGS
" see documentation: enter 'help' in tridactyl cmd line, then follow this link
"   --> 'default keybinds and settings'
""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""""

" characters to use for hints
set hintchars asdfghjkl

" mode to set for arranging hint characters
set hintfiltermode vimperator-reflow

" allow page to autofocus elements for you, via javascript
set allowautofocus false

" page to show in a new tab (due to tridactyl overrides, cannot use menu-page)
set newtab {{ home_page }}

" open new tab to right of current tab ('next'), or at end of all tabs ('last')
" note: does not seem to work for new tabs that open search results
set tabopenpos last

" display tridactyl mode indicator in lower right corner of page
set modeindicator true

" show partially-completed commands, dynamically, with mode indicator
set modeindicatorshowkeys true

" when there is only one hint displayed, automatically follow it
set hintautoselect true

" display hints in uppercase
set hintuppercase false

" number of most recent history results to use
set historyresults 50

" jump to first match for 'find' command
set incsearch true

" number of chars typed before triggering incsearch
set minincsearchlen 2

" search provider hotkeys to use with open/tabopen
{% for item in search_providers %}
set searchurls.{{ item.hotkeys }} {{ item.search_url }}
{% endfor %}

" default search provider to use for 'open/tabopen [some-search-string]' command
set searchengine {{ search_providers[0].hotkeys }}

